FROM openjdk:17-alpine
ARG appName
ENV APP_NAME=$appName
ENV SERVER_PORT=8081
ENV SERVER_INCLUDE_STACKTRACE=always
ENV LOG_LEVEL=debug
ENV CONVEYOR_TERM_MIDDLE=60
ENV CONVEYOR_TERM_BIG=120
ENV CONVEYOR_AMOUNT_MIDDLE=500000
ENV CONVEYOR_AMOUNT_BIG=2500000
ENV CONVEYOR_RATE_BASE=10
ENV CONVEYOR_RATE_TERM_SMALL=15
ENV CONVEYOR_RATE_TERM_MIDDLE=35
ENV CONVEYOR_RATE_TERM_BIG=55
ENV CONVEYOR_RATE_AMOUNT_SMALL=27
ENV CONVEYOR_RATE_AMOUNT_MIDDLE=16
ENV CONVEYOR_RATE_AMOUNT_BIG=5
ENV CONVEYOR_RATE_INSURANCE=10
ENV CONVEYOR_RATE_SALARY_CLIENT=12
ENV CONVEYOR_INSURANCE_PERCENT=3
ENV CONVEYOR_INSURANCE_SALARY_CLIENT_PERCENT=0
RUN mkdir /app
WORKDIR /app
COPY /target/$APP_NAME /app/$APP_NAME
ENTRYPOINT java -jar /app/$APP_NAME
EXPOSE $SERVER_PORT